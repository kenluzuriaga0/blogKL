    "copyright": "2024 Â© [Ken Luzuriaga](https://kenluzuriaga.netlify.app/). All Right Reserved."
  },

  "widgets": {
    "about": {
      "enable": true,
      "content": "Welcome! This blog is my space for thoughts. Have fun, and I hope you discover something new!"
    },
    "featured_posts": {
      "enable": false,
      "title": "Blog Categories",
      "showPost": 3
    },
    "categories": {
      "enable": true,
      "title": "Blog Categories"
    },
    "newsletter": {
      "enable": false,
      "title": "Newsletter",
      "content": "Join thousands of Tiny Salt subscribers and get our best recipes delivered each week!",
      "privacy_policy_page": "/privacy-policy",
      "malichipm_url": ""
